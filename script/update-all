#!/bin/bash

let failed=''

cd bundle
for b in `ls`; do
  pushd $b
  if [ -d '.git' ]; then
    # TODO: need to handle dumb cases like powerline that put things on
    # `develop`
    git checkout master; git pull || failed="$failed $b"
  fi
  popd
done

if [ -n "$failed" ]; then
  echo "Problems updating: $failed"
fi
